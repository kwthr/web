---
import { getLangFromUrl, useTranslations } from "@serverHelpers";
import NewsletterForm from "./NewsletterForm.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="container">
	<div class="hp-section-title color:#f1f1f1 font-weight:bold">Latest Updates</div>
	<div class="md:font-size:20px text-align:center margin-bottom:24px" set:html={t('Latest news about Stylify CSS.<br>Once a month. One click unsubscribe.')}></div>
	<NewsletterForm />
</div>
